ifeq ($(ARM), y)
CC=arm-linux-gcc
CXX=arm-linux-g++
INC=-I/opt/arm
LINK=-L/opt/arm -lasound
else
CC=gcc
CXX=g++
INC=-I/usr/include/alsa
LINK=-lasound
endif

target=test 

all : $(target)

test: test.o
	$(CC) $^ -o $@ $(LINK)
	echo "编译测试程序"

%.o : %.c
	$(CC) -c $^ -o $@  $(CFLAGS) $(DEFINES)

clean :
	rm *.o
	rm $(target)

